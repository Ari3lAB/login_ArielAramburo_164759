<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Registro">
    <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="395dp"
            android:layout_height="715dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp">
        <TextView
                android:text="Registro"
                android:layout_margin="30dp"
                android:textSize="36dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"/>


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_margin="20dp">

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Usuario:"
                      android:textSize="22dp"/>

            <EditText android:layout_width="match_parent"
                      android:hint="Ingrese usuario"
                      android:layout_height="wrap_content" android:id="@+id/et_user"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Contrase単a:"
                      android:textSize="22dp"/>

            <EditText android:inputType="textPassword"
                      android:layout_width="match_parent"
                      android:hint="Ingrese Contrase単a"
                      android:layout_height="wrap_content" android:id="@+id/et_pass"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Confirmar contrase単a:"
                      android:textSize="22dp"/>

            <EditText android:inputType="textPassword"
                      android:layout_width="match_parent"
                      android:hint="Confirme Contrase単a"
                      android:layout_height="wrap_content" android:id="@+id/et_pass2"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginTop="200dp"
        >

            <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="24dp"
                    android:text="Cancelar"
                    android:id="@+id/bt_cancelar"/>

            <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="24dp"
                    android:text="Aceptar"
                    android:id="@+id/bt_aceptar"/>
        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>